<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-chart-<%= chartType === 'pie' || chartType === 'doughnut' ? 'pie' : 'bar' %>"></i> 
                            <%= chartType.charAt(0).toUpperCase() + chartType.slice(1) %> Chart
                        </h3>
                        <a href="/" class="btn btn-light">
                            <i class="fas fa-arrow-left"></i> Back to Upload
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="chart-container" style="position: relative; height: 400px;">
                                    <canvas id="dataChart"></canvas>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <h5>Data Summary</h5>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Column</th>
                                                <th>Type</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (data.length > 0) { %>
                                                <% Object.keys(data[0]).forEach(function(key) { %>
                                                    <tr>
                                                        <td><%= key %></td>
                                                        <td><%= typeof data[0][key] %></td>
                                                    </tr>
                                                <% }); %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                
                                <div class="mt-3">
                                    <h6>Chart Options</h6>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('bar')">Bar</button>
                                        <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('line')">Line</button>
                                        <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('pie')">Pie</button>
                                        <button class="btn btn-outline-primary btn-sm" onclick="changeChartType('doughnut')">Doughnut</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h5>Raw Data Preview</h5>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <% if (data.length > 0) { %>
                                                <% Object.keys(data[0]).forEach(function(key) { %>
                                                    <th><%= key %></th>
                                                <% }); %>
                                            <% } %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.slice(0, 10).forEach(function(row) { %>
                                            <tr>
                                                <% Object.values(row).forEach(function(value) { %>
                                                    <td><%= value %></td>
                                                <% }); %>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                                <% if (data.length > 10) { %>
                                    <p class="text-muted">Showing first 10 rows of <%= data.length %> total rows</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Data from server
        const chartData = <%- JSON.stringify(data) %>;
        const chartType = '<%= chartType %>';
        let currentChart = null;
        
        // Process data for Chart.js
        function processData(data, type) {
            if (data.length === 0) return { labels: [], datasets: [] };
            
            const columns = Object.keys(data[0]);
            const numericColumns = columns.filter(col => {
                return data.some(row => !isNaN(parseFloat(row[col])) && isFinite(row[col]));
            });
            
            if (numericColumns.length === 0) {
                return { labels: [], datasets: [] };
            }
            
            if (type === 'pie' || type === 'doughnut') {
                const labelColumn = columns.find(col => !numericColumns.includes(col)) || columns[0];
                const valueColumn = numericColumns[0];
                
                return {
                    labels: data.map(row => row[labelColumn]),
                    datasets: [{
                        data: data.map(row => parseFloat(row[valueColumn]) || 0),
                        backgroundColor: generateColors(data.length),
                        borderWidth: 2
                    }]
                };
            } else {
                const labelColumn = columns.find(col => !numericColumns.includes(col)) || columns[0];
                
                return {
                    labels: data.map(row => row[labelColumn]),
                    datasets: numericColumns.map((col, index) => ({
                        label: col,
                        data: data.map(row => parseFloat(row[col]) || 0),
                        backgroundColor: `rgba(${54 + index * 50}, ${162 + index * 30}, ${235 + index * 20}, 0.6)`,
                        borderColor: `rgba(${54 + index * 50}, ${162 + index * 30}, ${235 + index * 20}, 1)`,
                        borderWidth: 2,
                        fill: type === 'line'
                    }))
                };
            }
        }
        
        function generateColors(count) {
            const colors = [];
            for (let i = 0; i < count; i++) {
                const hue = (i * 360) / count;
                colors.push(`hsl(${hue}, 70%, 50%)`);
            }
            return colors;
        }
        
        function createChart(type) {
            const ctx = document.getElementById('dataChart').getContext('2d');
            const processedData = processData(chartData, type);
            
            if (currentChart) {
                currentChart.destroy();
            }
            
            currentChart = new Chart(ctx, {
                type: type,
                data: processedData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: `Data Visualization - ${type.charAt(0).toUpperCase() + type.slice(1)} Chart`
                        }
                    },
                    scales: type !== 'pie' && type !== 'doughnut' ? {
                        y: {
                            beginAtZero: true
                        }
                    } : {}
                }
            });
        }
        
        function changeChartType(type) {
            createChart(type);
        }
        
        // Initialize chart
        document.addEventListener('DOMContentLoaded', function() {
            createChart(chartType);
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
</body>
</html>

