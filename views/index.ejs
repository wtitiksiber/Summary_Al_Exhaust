<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center header-flex">
                    <div>
                        <h2 class="mb-0">Production Dashboard</h2>
                        <small class="text-muted">Data Source: <%= dataSource || 'Google Sheets' %></small>
                    </div>
                    <div class="d-flex align-items-center">
                        <input type="date" class="form-control me-2" style="width: auto;" value="2025-01-10">
                        <button class="btn btn-success me-2" onclick="refreshData()">
                            <i class="fas fa-sync-alt"></i> Refresh Data
                        </button>
                        <button class="btn btn-primary" onclick="uploadFile()">
                            <i class="fas fa-upload"></i> Upload Data
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-6">
                <!-- Productivity Chart -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">PRODUCTIVITY</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="productivityChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Availability Chart -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">AVAILABILITY</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="availabilityChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- NG Inline Chart -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">NG INLINE</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="ngInlineChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Straightpass Chart -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">STRAIGHTPASS</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="straightpassChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-6">
                <!-- Downtime Exhaust Section -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">DOWNTIME EXHAUST</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container" style="height: 20vh;">
                            <canvas id="downtimeChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Downtime Category Charts -->
                <div class="row mb-3">
                    <div class="col-12 col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Downtime "4M"</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 20vh;">
                                    <canvas id="downtime4mChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Downtime Supporting</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 20vh;">
                                    <canvas id="downtimeSupportingChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Downtime Line</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 20vh;">
                                    <canvas id="downtimeLineChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Weekly Downtime Charts -->
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">WEEK 1</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 15vh;">
                                    <canvas id="week1Chart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">WEEK 2</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 15vh;">
                                    <canvas id="week2Chart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">WEEK 3</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 15vh;">
                                    <canvas id="week3Chart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">WEEK 4</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container" style="height: 15vh;">
                                    <canvas id="week4Chart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Corrective Action Tables -->
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">E-02</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>PIC</th>
                                                <th>PROBLEM</th>
                                                <th>AREA</th>
                                                <th>COUNTERMEASURE</th>
                                                <th>STATUS</th>
                                                <th>TERJADI</th>
                                                <th>MENIT</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr><td colspan="7" class="text-center text-muted">No data</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">E-03</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>PIC</th>
                                                <th>PROBLEM</th>
                                                <th>AREA</th>
                                                <th>COUNTERMEASURE</th>
                                                <th>STATUS</th>
                                                <th>TERJADI</th>
                                                <th>MENIT</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr><td colspan="7" class="text-center text-muted">No data</td></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-2">
                    <small class="text-muted">
                        <strong>Note CA</strong> ==> Corrective Action<br>
                        <strong>CNA</strong> ==> Correction Action
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden file input -->
    <input type="file" id="fileInput" accept=".csv,.xlsx,.xls" style="display: none;" onchange="handleFileUpload(this)">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="/js/dashboard.js"></script>
</body>
</html>
